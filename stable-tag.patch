+                id,
+                call_id: _,
+                status,
+                action,
+            } => {
+                // Confirm with API team.
+                let mut msg = json!({
+                        "role": "assistant",
+                        "content": null,
+                        "tool_calls": [{
+                                "id": id.clone().unwrap_or_else(|| "".to_string()),
+                                "type": "local_shell_call",
+                                "status": status,
+                                "action": action,
+                        }]
